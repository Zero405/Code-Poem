#include <stdio.h>
#include <string.h>

void FirstCourse(void) {
  int NumIngredients = 12;
  int cooking;
  char ShrimpShumai[1000];
  char ingredients[NumIngredients][50] = {"Cabbage", "Orange Slice", "Chopsticks", "Shrimp", "Wonton Wrappers"};
  
  for (cooking = 0; cooking < NumIngredients; cooking++){
    strcat(ShrimpShumai, ingredients[experience]);
    strcat(ShrimpShumai, ", ");
  }
  
  char MyExperience[100] = "I learned that Japanese cuisine uses contradictions with its cooking."
  
  if (ShrimpShumai = "Cabbage, Orange Slice, Chopsticks, Shrimp, Wonton Wrappers"){
    printf("%c\n", MyExperience);
    }
  
}

void SecondCourse(void){
  int NumIngredients = 12;
  int cooking;
  char BakedGreenMussels[1000];
  char ingredients[12][50] = {"Sake", "Orange Fish Eggs", "Cabbage", "Lemon Slice", "Teapot", "Creab Meat", "Ponzu Sauce", "Baked Green Mussels"};
  
  for (cooking = 0; cooking < NumIngredients; cooking++){
    strcat(BakedGreenMussels, ingredients[experience]);
    strcat(BakedGreenMussels, ", ");
  }
  
  char MyExperience[100] = "I learned to eat outside of my comfort code."
  
  if (BakedGreenMussels = "Sake, Orange Fish Eggs, Cabbage, Lemon Slice, Teapot, Creab Meat, Ponzu Sauce, Baked Green Mussels"){
    printf("%c\n", MyExperience);
    }
  
}

